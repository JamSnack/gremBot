            <kind>1</kind>
            <string>//Fly around and attack gremlins!
time += 1;

if instance_exists(target)
{
    var tx = target.x;
    var ty = target.y-3;
    
    switch state
    {
        case "ATTACK":
        {
            //Horizontal acceleration
            var h_dir = sign(tx-x);
            
            hspd = approach(hspd,max_accel*h_dir,accel_rate);
            x += hspd;
            
            image_xscale = 1*h_dir;
            
            
            //Vertical Acceleration
            var v_dir = sign(ty-y);
            vspd = approach(vspd,max_accel*v_dir,accel_rate);
            
            y += vspd;
            
            //Attack check!
            if point_distance(x,y,tx,ty) &lt;= 8
            {
                state = "WANDER";
                alarm[0] = room_speed*5;
                
                hspd = -hspd;
                vspd = -vspd;
                
                scr_hurt(instance_nearest(x,y,obj_viewerGremlin),2,-hspd,damage);
            }
        }
        break;
        
        case "WANDER":
        {
            vspd = approach(vspd,-max_accel,accel_rate);
            hspd = approach(hspd,max_accel,accel_rate);
            
            y+=vspd;
            x+=hspd;
        }
        break;
    }
    
    //Stay inside during combat!
    x = clamp(x,0,room_width);
}
else
{
    //Select a new target or despawn
    if instance_exists(obj_viewerGremlin)
    {
        target = instance_find(obj_viewerGremlin,irandom(instance_number(obj_viewerGremlin)-1));
    }
    else
    {
        //DESPAWN TIME!
        hspd = approach(hspd,max_accel*2,accel_rate*2);
        x+= hspd;
        image_xscale = 1;
        
        if x &gt; room_width+16 then instance_destroy();
    }
}



//Image angle
image_angle -= (hspd+vspd)*2;
</string>
